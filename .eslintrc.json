{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Konva": "readonly",
    "lucide": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": "warn",
    "no-var": "error",
    "prefer-const": "warn",
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "comma-dangle": ["error", "never"]
  }
} 